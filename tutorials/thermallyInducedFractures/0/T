FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    frontAndBack
    {
        type            empty;
    }

    bottom
    {
        type            zeroGradient;
    }

    top
    {
        type            zeroGradient;
    }


    left
    {
        type            uniformFixedValue;
        uniformValue    table
        (
            (0         300)
            (2500      350)
            (5000      300)
            (6000      300)
        );
    }

    right
    {
        type            zeroGradient;
    }
    
}

