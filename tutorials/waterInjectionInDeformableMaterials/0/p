FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $inPressure;

boundaryField
{
    frontAndBack
    {
        type            empty;
    }

    outerWall
    {
        type            totalPressure;
        p0              uniform $inPressure;
    }

    innerWall
    {
        type           $pressureBC;
        value          uniform $inPressure;
        p0             uniform $inPressure;
    }
 
}


